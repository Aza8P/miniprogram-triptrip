.navigation {
  height: 160rpx;
}
.main {
  padding: 20rpx 80rpx;
  padding-bottom: 160rpx;
}

.form-item {
  margin-bottom: 20rpx;
  font-weight: 400;
  font-size: 10pt;
}

.h1 {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 600;
  font-size: 50rpx;
  line-height: 60rpx;
  color: #000000;
  text-align: center;
}

.picker {
  height: 60rpx;
  font-weight: 300;
}

button {
  position: fixed; 
  left: 240rpx;
  bottom: 130rpx; 
  background-color: #E15B99;
  border: 1px solid #E15B99;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  font-family: 'Inter';
  line-height: 60rpx;
  color: #FFFFFF;
}

.h2{
  font-weight: 500;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.tags{
  display: grid;
  grid-template-columns: repeat(4, 1fr); 
  gap: 10rpx; 
	/* column-gap: 10px; */
	/* grid-gap: 10px; */
}

.tag{
  border:#fc9bc8 1px solid;
  border-radius: 10rpx;
  text-align: center;
  padding: 3rpx;
  font-size:20rpx;
  /* width: 20%; */
}

.tag-inactive {
  color:#fc9bc8;
}

.tag-active {
  color: white;
  background-color: #fc9bc8;
}
