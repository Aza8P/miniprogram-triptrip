/* pages/trips/survey.wxss */

.main {
  padding: 20rpx 80rpx;
  padding-top: 100rpx;
  padding-bottom: 200rpx;
}

form {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.h1 {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 600;
  font-size: 50rpx;
  line-height: 60rpx;
  color: #000000;
  text-align: center;
  padding-bottom: 50rpx;
}

.h2 {
  font-size: 35rpx;
  font-weight: bold;
}

.form-item {
  margin-bottom: 10rpx;
  margin-top: 30rpx;
  font-weight: 400;
  /* font-size: 10pt; */
}

.hidesurvey {
  position: fixed;
  left: 220rpx;
  bottom: 120rpx;
}

button {
  position: fixed; 
  left: 240rpx;
  bottom: 50rpx; 
  background-color: #E15B99;
  border: 1px solid #E15B99;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  font-family: 'Inter';
  line-height: 60rpx;
  color: #FFFFFF;
}

.options {
  height: 100rpx;
  width: 600rpx;
  margin: 30rpx 30rpx 30rpx 30rpx;
  padding: 70rpx;
  font-size: 35rpx;
  color: black;
}
