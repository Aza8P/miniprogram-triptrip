/* pages/trips/survey.wxss */

.main {
  padding: 20rpx 80rpx;
  padding-top: 100rpx;
  padding-bottom: 200rpx;
}

form {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 0rpx;
}

.h1 {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 600;
  font-size: 50rpx;
  line-height: 60rpx;
  color: #000000;
  text-align: center;
  padding-bottom: 50rpx;
}

.h2 {
  font-size: 35rpx;
  font-weight: bold;
}

.item-name {
  margin-bottom: 10rpx;
  margin-top: 30rpx;
  font-weight: 400;
}

.item-add {
  margin-bottom: 0rpx;
  margin-top: 50rpx;
  font-weight: 400;
}

.form-option {
  display: flex; 
  justify-content: space between; 
  padding: 0rpx;
}

.toggle-btn {
  height: 38rpx; 
  width: 38rpx;
  padding-top: 5rpx; 
  padding-right: 20rpx;
}

.greydot {
  height: 38rpx; 
  width: 38rpx; 
  padding-top: 5rpx; 
  padding-right: 10rpx;
}

.dot-point {
  display: flex; 
  padding: 10rpx;
}

.nameinput, .roominput, .pickinput {
  background-color: #D9D9D9; 
  border: 2rpx solid #D9D9D9; 
  border-radius: 30rpx; 
  padding: 12rpx 20rpx; 
  margin-top: 10rpx; 
  font-weight: 200; 
  height: 60rpx;
}

.foodinput {
  background-color: #D9D9D9; 
  border: 2rpx solid #D9D9D9; 
  border-radius: 30rpx; 
  padding: 12rpx 20rpx; 
  margin-top: 10rpx; 
  font-weight: 200; 
  height: 130rpx;
}

button {
  position: fixed; 
  left: 240rpx;
  bottom: 50rpx; 
  background-color: #E15B99;
  border: 1px solid #E15B99;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  font-family: 'Inter';
  line-height: 60rpx;
  color: #FFFFFF;
}

.option-room, .option-pickup {
  height: 100rpx;
  width: 600rpx;
  margin: 0rpx 30rpx;
  padding: 70rpx;
  font-size: 35rpx;
  color: black;
}

.option-food {
  height: 100rpx;
  width: 600rpx;
  margin: 30rpx 30rpx;
  padding: 20rpx 20rpx 70rpx 70rpx;
  font-size: 35rpx;
  color: black;
}

