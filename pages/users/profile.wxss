.trip-card {
  /* background-color: pink; */
  margin-bottom: 30rpx;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
  border-radius: 30rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding-bottom: 10rpx;
  position: relative;
}

.trip-img {
  border-radius: 30rpx 30rpx 0 0;
}

.trip-info {
  margin: 10rpx 20rpx;
}

.trip-title {
  margin-bottom: 10rpx;
  font-family: 'Inter';
  font-style: normal;
  font-weight: 500;
  font-size: 20px;
  line-height: 24px;
  color: #000000;
}

.trip-start-date {
  font-size: 28rpx;
}

.trip-location {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
}

.notrip {
  background-color:#FFD6E0;
  width: 590rpx;
  text-align: center;
  /* height: 90rpx; */
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 30rpx;
}

