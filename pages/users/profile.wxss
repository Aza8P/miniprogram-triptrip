/* pages/users/profile.wxss */
.container {
  padding: 100rpx 30rpx;
}
.profile-img {
  width: 54px;
  height: 54px;
  margin: 10rpx 50rpx auto;
  background: #FFD6E0;
  border-radius: 150rpx;
  padding: 40rpx;
}
.page-title{
  margin: 40rpx auto;
  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-size: 25px;
  line-height: 30px;
  color: #000000;
}

.title-create {
  width: 164px;
  height: 24px;

  font-family: 'Inter';
  font-style: normal;
  font-weight: 700;
  font-size: 20px;
  line-height: 24px;
  color: #000000;
}


.loading-screen{
  width: 100%;
  height: 50vh;
  background-color: transparent;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
}
.loading{
  position: absolute;
  top: 650rpx;
  width: 80px;
  display: flex;
  flex-wrap: wrap;
  animation: rotate 6s linear infinite;
}
@keyframes rotate{
  to{
    transform: rotate(360deg);
  }
}
.loading .sq1{
  width: 32px;
  height: 32px;
  background-color: #FFD6E0;
  margin: 4px;
}
.loading .sq2{
  width: 32px;
  height: 32px;
  background-color: #E786B4;
  margin: 4px;
}
.loading .sq3{
  width: 32px;
  height: 32px;
  background-color: #E786B4;
  margin: 4px;
}
.loading .sq4{
  width: 32px;
  height: 32px;
  background-color: #e4e4e4;
  margin: 4px;
}

.option {
  align-self: flex-start;
  margin: 30rpx 10rpx;
}
.active {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 600;
  font-size: 22px;
  line-height: 24px;
  color: #E15B99;
  text-shadow: 2px 2px 5px burlywood;
  margin: 10rpx;
}
.inactive {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-size: 22px;
  line-height: 24px;
