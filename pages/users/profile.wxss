.container {
  padding-top: 100rpx;
  padding-bottom: 200rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
}
.profile-img {
  width: 54px;
  height: 54px;
  margin: 10rpx 50rpx auto;
  background: #FFD6E0;
  border-radius: 150rpx;
  padding: 40rpx;
}
.page-title{
  margin: 40rpx auto;
  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-size: 25px;
  line-height: 30px;
  color: #404040;
}

.title-text-box {
  width: 95%;
  font-size: 50rpx;
  font-weight: bold;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}

.title-create {
  width: 164px;
  height: 24px;
  font-family: 'Inter';
  font-style: normal;
  font-weight: 700;
  font-size: 20px;
  line-height: 24px;
  color: #000000;
}

.options-and-create {
  width: 95%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.option {
}

.active {
  font-family: 'Inter';
  /* font-style: normal; */
  font-weight: 600;
  font-size: 20px;
  line-height: 24px;
  color: #E15B99;
  text-decoration: underline;
  margin: 10rpx;
}
.inactive {
  font-family: 'Inter';
  /* font-style: normal; */
  font-weight: 400;
  font-size: 14px;
  line-height: 24px;
  color: #000000;
  margin: 10rpx;
  /* border-radius: 16rpx; */
}

