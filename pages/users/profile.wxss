/* pages/users/profile.wxss */
.container {
  padding: 200rpx 30rpx;
}
.profile-img {
  width: 64px;
  height: 64px;
  margin: 10rpx 50rpx auto;
  background: #FFD6E0;
  border-radius: 150rpx;
  padding: 50rpx;
}
.page-title{
  margin: 40rpx auto;
  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-size: 25px;
  line-height: 30px;
  color: #000000;
}

.title-create {
  width: 164px;
  height: 24px;

  font-family: 'Inter';
  font-style: normal;
  font-weight: 700;
  font-size: 20px;
  line-height: 24px;
  color: #000000;
}

.option {
  align-self: flex-start;
  margin: 30rpx 10rpx;
}
.active {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 600;
  font-size: 25px;
  line-height: 24px;
  color: #E15B99;
  text-decoration: underline;
  margin: 10rpx;
}
.inactive {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 400;
  font-size: 18px;
  line-height: 24px;
  color: #000000;
  margin: 10rpx;
  border-radius: 16rpx;
}

.create-img {
  box-sizing: border-box;
  margin: 10rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  width: 450rpx;
  /* height: 300rpx; */
  border: 1px solid #E786B4;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 16px;
}
.card-info {
  width: 550rpx;
  margin: 20rpx;
}
.card-title {
  margin-bottom: 10rpx;
  font-family: 'Inter';
  font-style: normal;
  font-weight: 500;
  font-size: 20px;
  line-height: 24px;
  color: #000000;
}
.card-description {
  margin-bottom: 10rpx;
}

.notrip {
  background-color:#FFD6E0;
  width: 590rpx;
  height: 90rpx;
  margin: 20rpx;
  padding: 20rpx;
}

.secondary-btn {
  box-sizing: border-box;
  background: #FFFFFF;
  border: 1px solid #E15B99;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  border-radius: 16px;
}
  
.btn-text {
  width: 180px;
  height: 24px;
  font-family: 'Inter';
  font-style: normal;
  font-weight: 600;
  font-size: 17px;
  line-height: 24px;
  color: #E15B99;
  }