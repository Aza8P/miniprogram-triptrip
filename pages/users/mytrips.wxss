/* pages/users/mytrips.wxss */
@import "user.wxss";

.option {
  align-self: flex-start;
  margin: 30rpx 10rpx;
}

.card-title {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 500;
  font-size: 20px;
  line-height: 24px;
  color: white;
}
.card-description {
  color: white;
}

.header-bookmark {
  font-family: Fira Sans;
  align-self: flex-start;
  margin: 50rpx 20rpx;
  font-style: normal;
  font-weight: 600;
  font-size: 22px;
  line-height: 20px;
  color: #000000;
}
.card-view{
  box-sizing: border-box; 
  border-radius: 16px;
  overflow: hidden; 
  width:96%; 
  height: 100%;
}
.card-view-filter {
  position: absolute;
  background-color: black;
  opacity: 30%;
}

.trip-info{
  position: absolute;
  width: 320rpx;
  top: 30rpx;
  left: 30rpx;
}

