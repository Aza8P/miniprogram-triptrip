<!--pages/bookings/form.wxml-->
<view class="navigation">
  <image src="/images/homeempty-pink.png" style="height: 60rpx; width: 60rpx; position: fixed; top: 50px; left: 30px;" bindtap="goToHome"></image>
</view>

<view class="main">
  <view class="h1"> Sign up for my next trip</view>
  <form bindsubmit="create">
  <!-- required field -->
    <view class="form-item">
      <view class="title"><text class="h2">Full name</text></view>
      <input style="border: 2rpx solid #E15B99; border-radius: 30rpx; padding: 4rpx 30rpx; margin-top: 10rpx; font-weight: 200; height: 55rpx;" bindinput="setInputData" data-field="title" name="title" value="{{formData.title}}" />
    </view>

  <!-- survey field -->
    <view class="form-item">
        <radio-group class="radio-group" bindchange="radioChange" wx:for="{{questions}}" wx:for-item="question">
          <view class="question"><label class="h2" wx:item="{{item}}">{{question.content}}
          </label></view>

          <view class="answer"><label wx:for="{{question.options}}" wx:for-item="option"  >
              <radio value="{{option}}"/>{{option}}
            </label></view>
            <!-- <radio wx:item="{{item.options}}" value="{{item.options[0]}}" checked="false"/>{{item.options[0]}}
            <radio value="{{item.options[1]}}"/>{{item.options[1]}}
            <radio value="{{item.options[2]}}"/>{{item.options[2]}} -->    
        </radio-group>
      
      <!-- </view> -->
    </view>

    <button class="signup" style="font-weight: 700; font-size: 30rpx; width: 280rpx; border-radius: 32rpx;" bindtap="submitSurvey">Sign up</button>

  </form>
</view>

