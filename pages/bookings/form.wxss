/* pages/bookings/form.wxss */
.navigation {
  height: 160rpx;
}
.main {
  padding: 20rpx 80rpx;
  padding-top: 50rpx;
  padding-bottom: 200rpx;
}

.h1 {
  font-family: 'Inter';
  font-style: normal;
  font-weight: 600;
  font-size: 50rpx;
  line-height: 60rpx;
  color: #000000;
  text-align: center;
}
.goback-btn {
  height: 35rpx;
  width: 35rpx;
  position: absolute;
  top: 90rpx;
  left: 30rpx;
  z-index: 5;
  background-color: rgba(255, 255, 255, 1); 
  border-radius: 50%; 
  padding: 15rpx
}

.h2{
  font-weight: 500;
  font-size: 30rpx;
}

.input-box {
  border: 2rpx solid #E15B99; 
  border-radius: 30rpx; 
  padding: 4rpx 30rpx; 
  margin-top: 10rpx; 
  font-weight: 200; 
  height: 55rpx;
}

.form-item {
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-weight: 400;
  font-size: 10pt;
}

.question {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.answer {
  margin-bottom: 40rpx;
  padding: 20rpx;
  font-size: 30rpx;
}

.signup {
  position: fixed; 
  left: 230rpx;
  bottom: 70rpx; 
  background-color: #E15B99;
  border: 1px solid #E15B99;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  font-family: 'Inter';
  line-height: 60rpx;
  color: #FFFFFF;
}