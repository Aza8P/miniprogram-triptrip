/**app.wxss**/
@import "/style/font.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
} 


.loading-screen{
  width: 100%;
  height: 50vh;
  background-color: transparent;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
}
.loading{
  position: absolute;
  top: 650rpx;
  width: 80px;
  display: flex;
  flex-wrap: wrap;
  animation: rotate 6s linear infinite;
}
@keyframes rotate{
  to{
    transform: rotate(360deg);
  }
}
.loading .sq1{
  width: 32px;
  height: 32px;
  background-color: #FFD6E0;
  margin: 4px;
}
.loading .sq2{
  width: 32px;
  height: 32px;
  background-color: #E786B4;
  margin: 4px;
}
.loading .sq3{
  width: 32px;
